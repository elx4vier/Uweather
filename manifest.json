{
  "manifest_version": "2",
  "required_api_version": "^2.0.0",
  "name": "UWeather",
  "display_name": "UWeather - Clima Atual + 3 Dias",
  "description": "Clima atual e previsão automática com cache inteligente.",
  "developer_name": "Xavier",
  "icon": "images/sun.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "keyword",
      "type": "keyword",
      "name": "Palavra-chave",
      "default_value": "clima"
    },
    {
      "id": "api_key",
      "type": "input",
      "name": "OpenWeatherMap API Key",
      "description": "Insira sua API Key do OpenWeatherMap",
      "default_value": ""
    }
  ]
}
