{
  "manifest_version": "2",
  "required_api_version": "^2.0.0",

  "name": "UWeather",
  "display_name": "UWeather",
  "description": "Weather extension using Open-Meteo with automatic/manual location and customizable interface.",

  "developer_name": "Xavier",
  "icon": "images/icon.png",

  "options": {
    "query_debounce": 0.1
  },

  "preferences": [
    {
      "id": "keyword",
      "type": "keyword",
      "name": "Keyword",
      "default_value": "w",
      "description": "Type this keyword to trigger the weather search."
    },

    {
      "id": "unit",
      "type": "select",
      "name": "Temperature Unit",
      "default_value": "C",
      "options": [
        { "text": "Celsius (°C)", "value": "C" },
        { "text": "Fahrenheit (°F)", "value": "F" }
      ]
    },

    {
      "id": "location_mode",
      "type": "select",
      "name": "Location Mode",
      "default_value": "auto",
      "options": [
        { "text": "Automatic", "value": "auto" },
        { "text": "Manual", "value": "manual" }
      ]
    },

    {
      "id": "static_location",
      "type": "input",
      "name": "Static Location",
      "description": "Used only if Location Mode is Manual. Example: São Luís, BR",
      "default_value": ""
    },

    {
      "id": "interface_mode",
      "type": "select",
      "name": "Interface Display",
      "default_value": "complete",
      "options": [
        { "text": "Completo", "value": "complete" },
        { "text": "Essencial", "value": "essential" },
        { "text": "Mínimo", "value": "minimal" }
      ]
    }
  ]
}
