{
  "manifest_version": "2",
  "required_api_version": "^2.0.0",
  "name": "UWeather",
  "display_name": "UWeather - Clima Atual + 3 Dias",
  "description": "Clima atual e previsão automática com cache inteligente.",
  "developer_name": "Xavier",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "keyword",
      "type": "keyword",
      "name": "Palavra-chave",
      "default_value": "clima"
    },
    {
      "id": "api_key",
      "type": "input",
      "name": "OpenWeather API Key",
      "default_value": ""
    },
    {
      "id": "provider",
      "type": "select",
      "name": "Provedor de Clima",
      "default_value": "openweather",
      "options": [
        { "label": "OpenWeather", "value": "openweather" },
        { "label": "Open-Meteo", "value": "openmeteo" }
      ]
    },
    {
      "id": "unit",
      "type": "select",
      "name": "Unidade",
      "default_value": "metric",
      "options": [
        { "label": "Celsius (°C)", "value": "metric" },
        { "label": "Fahrenheit (°F)", "value": "imperial" }
      ]
    },
    {
      "id": "location_mode",
      "type": "select",
      "name": "Modo de Localização",
      "default_value": "auto",
      "options": [
        { "label": "Automática (IP)", "value": "auto" },
        { "label": "Cidade fixa", "value": "static" }
      ]
    },
    {
      "id": "static_city",
      "type": "input",
      "name": "Cidade Fixa",
      "default_value": ""
    },
    {
      "id": "view_mode",
      "type": "select",
      "name": "Visualização",
      "default_value": "full",
      "options": [
        { "label": "Completo", "value": "full" },
        { "label": "Compacto", "value": "compact" },
        { "label": "Minimal", "value": "minimal" },
        { "label": "Ultra minimal", "value": "ultra" },
        { "label": "Linha única", "value": "singleline" }
      ]
    },
    {
      "id": "language",
      "type": "select",
      "name": "Idioma",
      "default_value": "pt",
      "options": [
        { "label": "Português", "value": "pt" },
        { "label": "English", "value": "en" },
        { "label": "Español", "value": "es" },
        { "label": "Русский", "value": "ru" },
        { "label": "Français", "value": "fr" }
      ]
    }
  ]
}
