{
  "manifest_version": "2",
  "required_api_version": "^2.0.0",

  "name": "UWeather",
  "display_name": "UWeather",
  "description": "Weather extension using Open-Meteo with automatic/manual location and customizable interface.",

  "developer_name": "Xavier",
  "icon": "images/icon.png",

  "options": {
    "query_debounce": 0.1
  },

  "preferences": [
    {
      "id": "keyword",
      "type": "keyword",
      "name": "UWeather",
      "description": "Quick, simple, and direct weather forecast.",
      "default_value": "w"
    },

    {
      "id": "unit",
      "type": "select",
      "name": "Temperature Unit",
      "default_value": "C",
      "options": [
        { "text": "Celsius (°C)", "value": "C" },
        { "text": "Fahrenheit (°F)", "value": "F" }
      ]
    },

    {
      "id": "location_mode",
      "type": "select",
      "name": "Location Mode",
      "default_value": "auto",
      "options": [
        { "text": "Automatic", "value": "auto" },
        { "text": "Manual", "value": "manual" }
      ]
    },

    {
      "id": "static_location",
      "type": "input",
      "name": "Static Location",
      "description": "Used only in Manual mode. Enter only the city name. Examples: Prague, Lisbon, São Paulo",
      "default_value": ""
    },

    {
      "id": "interface_mode",
      "type": "select",
      "name": "Interface Display",
      "default_value": "complete",
      "options": [
        { "text": "Complete", "value": "complete" },
        { "text": "Essential", "value": "essential" },
        { "text": "Minimal", "value": "minimal" }
      ]
    }
  ]
}
