{
  "manifest_version": "2",
  "required_api_version": "^2.0.0",

  "name": "UWeather",
  "display_name": "UWeather",
  "description": "Fast and lightweight weather extension with smart caching, automatic location detection, multi-provider support, customizable display modes, and configurable icons.",

  "developer_name": "Xavier",
  "icon": "images/icon.png",

  "options": {
    "query_debounce": 0.1
  },

  "preferences": [

    {
      "id": "keyword",
      "type": "keyword",
      "name": "Keyword",
      "default_value": "w",
      "description": "Type this keyword to trigger the weather search."
    },

    {
      "id": "provider",
      "type": "select",
      "name": "Weather Provider",
      "default_value": "openweather",
      "options": [
        { "text": "OpenWeather (requires API key)", "value": "openweather" },
        { "text": "Open-Meteo (no API key required)", "value": "openmeteo" }
      ]
    },

    {
      "id": "api_key",
      "type": "input",
      "name": "OpenWeather API Key",
      "description": "Required only if OpenWeather is selected.",
      "default_value": ""
    },

    {
      "id": "unit",
      "type": "select",
      "name": "Temperature Unit",
      "default_value": "metric",
      "options": [
        { "text": "Celsius (°C)", "value": "metric" },
        { "text": "Fahrenheit (°F)", "value": "imperial" }
      ]
    },

    {
      "id": "location_mode",
      "type": "select",
      "name": "Location Mode",
      "default_value": "auto",
      "options": [
        { "text": "Automatic", "value": "auto" },
        { "text": "Manual", "value": "manual" }
      ]
    },

    {
      "id": "static_city",
      "type": "input",
      "name": "Manual City",
      "description": "Used only when Location Mode is set to Manual.",
      "default_value": ""
    },

    {
      "id": "view_mode",
      "type": "select",
      "name": "Display Mode",
      "default_value": "3",
      "options": [
        { "text": "Ultra Minimal", "value": "1" },
        { "text": "Minimal", "value": "2" },
        { "text": "Compact", "value": "3" },
        { "text": "Full", "value": "4" },
        { "text": "Detailed (current + forecast)", "value": "5" }
      ]
    },

    {
      "id": "language",
      "type": "select",
      "name": "Language",
      "default_value": "pt",
      "options": [
        { "text": "English", "value": "en" },
        { "text": "Português", "value": "pt" },
        { "text": "Español", "value": "es" },
        { "text": "Français", "value": "fr" },
        { "text": "Русский", "value": "ru" }
      ]
    },

    {
      "id": "icon_default",
      "type": "file",
      "name": "Default Icon",
      "description": "Icon used for normal display and default state.",
      "default_value": "images/icon.png"
    },

    {
      "id": "icon_error",
      "type": "file",
      "name": "Error Icon",
      "description": "Icon used when an error occurs while fetching weather.",
      "default_value": "images/error.png"
    },

    {
      "id": "icon_loading",
      "type": "file",
      "name": "Loading Icon",
      "description": "Icon shown while fetching weather data.",
      "default_value": "images/loading.png"
    },

    {
      "id": "icon_alert",
      "type": "file",
      "name": "Alert Icon",
      "description": "Icon used for warnings or alerts.",
      "default_value": "images/alert.png"
    },

    {
      "id": "cache_ttl",
      "type": "int",
      "name": "Cache TTL (seconds)",
      "description": "Time the weather data stays in cache before refreshing.",
      "default_value": 300
    }

  ]
}
